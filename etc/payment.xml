<?xml version="1.0"?>
<!--
/* Based on  php-cuong/magento-offline-payments  */
-->
<payment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Payment:etc/payment.xsd">
    <groups>
        <group id="offline">
            <label>Offline Payment Methods</label>
        </group>
    </groups>
    <methods>
        <method name="emandate">
            <allow_multiple_address>1</allow_multiple_address>
        </method>
        <method name="epayment">
            <allow_multiple_address>1</allow_multiple_address>
        </method>
        <method name="epayment_paypal">
            <allow_multiple_address>1</allow_multiple_address>
        </method>
        <method name="epayment_creditcard">
            <allow_multiple_address>1</allow_multiple_address>
        </method>
        <method name="epayment_cartebancaire">
            <allow_multiple_address>1</allow_multiple_address>
        </method>
        <method name="epayment_sofort">
            <allow_multiple_address>1</allow_multiple_address>
        </method>
    </methods>
</payment>
